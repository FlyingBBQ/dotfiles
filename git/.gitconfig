[core]
    excludesfile = ~/.gitignore_global

[merge]
    tool = nvim

[pull]
    rebase = false

[push]
    autoSetupRemote = true

[alias]
    bav = branch -avv
    pro = remote prune origin
    sup = submodule update --init --recursive
    la = log --pretty=format:'%C(auto)%h%d %s %C(white)- %C(bold blue)%an %Creset%C(white)%cr %Creset'

[include]
    path = ~/.gitconfig_local

