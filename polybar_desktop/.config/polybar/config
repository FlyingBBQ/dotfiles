[colors]
background = ${xrdb:color0}
background-alt = ${xrdb:color4}
bg2 = #665c54
bg3 = #504945

foreground = ${xrdb:color3}
foreground-alt = ${xrdb:color15}

primary = ${xrdb:color3}
secondary = ${xrdb:color4}
alert = ${xrdb:color1}

dblue = ${xrdb:color4}
blue = ${xrdb:color12}
white = ${xrdb:color15}
dgreen = ${xrdb:color2}
dcyan = ${xrdb:color6}
red = ${xrdb:color9}

[global/wm]
;margin-top = 5
;margin-bottom = 5

[bar/barleft]
monitor = ${env:MONITOR:HDMI-0}
bottom = false
width = 100%
height = 28
offset-x = 0
offset-y = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.white}

;border-top-size = 4
border-top-color = ${colors.background}

underline-size = 3
underline-color = ${colors.alert}

font-0 = Hack:bold:size=10;2
font-1 = Hack:bold:size=12;1
font-2 = Material Icons:pixelsize=13;4
font-3 = FontAwesome:pixelsize=11;2

padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 1

modules-left = i3
modules-center = date
modules-right = mail temp cpu mem eth1 eth2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/barright]
monitor = ${env:MONITOR:DVI-0}
bottom = false
width = 100%
height = 28
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.white}

;border-top-size = 4
border-top-color = ${colors.background}

underline-size = 3
underline-color = ${colors.alert}

font-0 = Hack:bold:size=10;2
font-1 = Hack:bold:size=12;1
font-2 = Material Icons:pixelsize=13;4
font-3 = FontAwesome:pixelsize=11;2

padding-left = 0
padding-right = 2
module-margin-left = 2
module-margin-right = 1

tray-position = right

modules-left = i3
modules-center = mpd
modules-right = volume powermenu

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:10:...%

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
wrapping-scroll = false
format = <label-state> <label-mode>

label-mode-padding = 1
label-mode-foreground = ${colors.white}
label-mode-background = ${colors.alert}

label-focused = %name%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.primary}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-foreground = ${colors.white}
label-unfocused-background = ${colors.background}
label-unfocused-underline = ${colors.background}
label-unfocused-padding = 1

label-urgent = %name%
label-urgent-foreground = ${colors.white}
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-visible = %name%
label-visible-background = ${self.label-unfocused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-unfocused-padding}

[module/mpd]
type = internal/mpd
host = /home/derek/.config/mpd/socket
port = 6600
interval = 1
label-song = %artist% - %title%
;label-song-underline = ${colors.primary}
label-song-foreground = ${colors.primary}
label-time = %elapsed% / %total%
;label-time-underline = ${colors.dcyan}
label-time-foreground = ${colors.primary}
format-online = <label-song>    <label-time>
format-online-font = 3

label-song-maxlen = 70
label-song-ellipsis = true

[module/mail]
type = custom/script
interval = 10
format = <label>
;format-underline = ${colors.primary}
;format-background = ${colors.bg3}
format-padding = 1
label-foreground = ${colors.primary}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/.mail

[module/cpu]
type = internal/cpu
interval = 1
format = <label><bar-load>
label-font = 2
label = 
;label = %percentage:2:2%%
;label-foreground = ${colors.primary}

bar-load-indicator =
bar-load-width = 12
bar-load-foreground-0 = ${colors.primary}
bar-load-fill = ▐
bar-load-empty = ▐
bar-load-empty-foreground = ${colors.bg2}

[module/mem]
type = internal/memory
interval = 2
format = <label><bar-used>
label-font = 3
label = 

bar-used-indicator =
bar-used-width = 12
bar-used-foreground-0 = ${colors.primary}
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = ${colors.bg2}

[module/temp]
type = internal/temperature
interval = 2
thermal-zone = 0
warn-temperature = 80

format = <ramp> <label>
format-font = 3
label-foreground = ${colors.primary}
label = %temperature%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.foreground-alt}

[module/eth1]
type = internal/network
interface = enp7s0
interval = 2

format-connected =  <label-connected>
format-connected-font = 2
format-connected-foreground = ${colors.foreground-alt}

label-connected = %upspeed:4:4%
label-connected-foreground = ${colors.primary}

[module/eth2]
type = internal/network
interface = enp7s0
interval = 2

format-connected =  <label-connected>
format-connected-font = 3
format-connected-foreground = ${colors.foreground-alt}

label-connected = %downspeed:4:4%
label-connected-foreground = ${colors.primary}

[module/date]
type = internal/date
interval = 1

time = %H:%M:%S
date = "%A %B %d, "
time-alt = %H:%M:%S

label-foreground = ${colors.primary}
label = %date%%time%

[module/volume]
type = internal/volume
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
mapping = false

master-mixer = Master
;speaker-mixer = Master
;headphone-mixer = Headphone

format-volume-font = 3
format-volume =  <bar-volume>
label-volume = %percentage%%
label-volume-foreground = ${colors.primary}

format-muted =  <bar-volume> 
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-indicator = ▐
bar-volume-indicator-foreground = ${colors.primary}
bar-volume-width = 25
bar-volume-foreground-0 = ${colors.primary}
bar-volume-fill = ─
bar-volume-empty = ─
bar-volume-empty-foreground = ${colors.bg2}

[module/powermenu]
type = custom/menu
format-spacing = 1
format = <menu> <label-toggle>

label-font = 3
label-open = 
label-open-foreground = ${colors.white}
;label-open-underline = ${colors.alert}
label-close = 
label-close-foreground = ${colors.white}
;label-close-underline = ${colors.alert}
label-separator = " "
label-separator-foreground = ${colors.primary}

menu-0-0 = 
menu-0-0-exec = menu-open-1
menu-0-1 = 
menu-0-1-exec = menu-open-2
menu-0-2 = 
menu-0-2-exec = dunst_xautolock.sh

menu-1-0 = 
menu-1-0-exec = reboot

menu-2-0 = 
menu-2-0-exec = poweroff

